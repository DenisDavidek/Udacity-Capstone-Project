<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:orientation="vertical"
    android:padding="@dimen/default_large_size">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/eTFrgLoginEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/frg_login_cd_write_your_email"
            android:drawableLeft="@drawable/ic_account"
            android:drawablePadding="@dimen/default_medium_size"
            android:drawableStart="@drawable/ic_account"
            android:hint="@string/frg_create_workout_name"
            android:inputType="textCapSentences"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColorHint="@color/accent" />

    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_medium_size"
        android:layout_marginTop="@dimen/default_medium_size"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tVFrgCreateWorkoutRounds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_time_laps_rounds"
            android:drawablePadding="@dimen/default_medium_size"
            android:drawableStart="@drawable/ic_time_laps_rounds"
            android:gravity="center_vertical"
            android:text="@string/frg_create_workout_rounds_number"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/iBFrgCreateWorkoutRoundsMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="@dimen/default_small_size"
            android:src="@drawable/selector_minus_button" />

        <ImageButton
            android:id="@+id/iBFrgCreateWorkoutRoundsPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="@dimen/default_small_size"
            android:src="@drawable/selector_plus_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_medium_size"
        android:layout_marginTop="@dimen/default_medium_size"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tVFrgCreateWorkoutRestExercise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_timer"
            android:drawablePadding="@dimen/default_medium_size"
            android:drawableStart="@drawable/ic_timer"
            android:gravity="center_vertical"
            android:text="@string/frg_create_workout_rest_between_exercise_number"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/iBFrgCreateWorkoutRestExerciseMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="@dimen/default_small_size"
            android:src="@drawable/selector_minus_button" />

        <ImageButton
            android:id="@+id/iBFrgCreateWorkoutRestExercisePlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="@dimen/default_small_size"
            android:src="@drawable/selector_plus_button" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_medium_size"
        android:layout_marginTop="@dimen/default_medium_size"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tVFrgCreateWorkoutRestRounds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_timer"
            android:drawablePadding="@dimen/default_medium_size"
            android:drawableStart="@drawable/ic_timer"
            android:gravity="center_vertical"
            android:text="@string/frg_create_workout_rest_between_rounds_number"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/white" />

        <ImageButton
            android:id="@+id/iBFrgCreateWorkoutRestRoundsMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="@dimen/default_small_size"
            android:src="@drawable/selector_minus_button" />

        <ImageButton
            android:id="@+id/iBFrgCreateWorkoutRestRoundsPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="@dimen/default_small_size"
            android:src="@drawable/selector_plus_button" />
    </LinearLayout>

</LinearLayout>

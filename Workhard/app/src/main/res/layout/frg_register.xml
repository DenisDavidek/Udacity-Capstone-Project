<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cVFrgRegister"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="@dimen/default_elevation_lvl_one"
    android:padding="@dimen/default_medium_size"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".app.ui.init.InitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_medium_size">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/eTFrgRegisterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/frg_register_first_name"
                android:inputType="textCapWords"
                android:textColor="@color/accent" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_medium_size">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/eTFrgLoginLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/frg_register_last_name"
                android:inputType="textCapWords"
                android:textColor="@color/accent" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_medium_size">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/eTFrgLoginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/frg_register_email"
                android:inputType="textEmailAddress"
                android:textColor="@color/accent" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tVFrgRegisterDate"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/frg_register_birthday"
            android:padding="@dimen/default_large_size" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/eTFrgLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/frg_register_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:textColor="@color/accent" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_medium_size">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/eTFrgLoginRepeatPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/frg_register_confirm_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:textColor="@color/accent" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".app.ui.init.InitActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cVFrgLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/default_x_large_size"
        android:layout_marginRight="@dimen/default_x_large_size"
        android:elevation="@dimen/default_small_size"
        android:padding="@dimen/default_medium_size"
        tools:cardCornerRadius="@dimen/default_card_view_radios">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/default_medium_size"
                android:text="@string/frg_login_login_with"
                android:textColor="@color/colorAccent" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bTFrgLoginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/frg_login_by_email" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bTFrgLoginGoogleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:text="@string/frg_login_by_google" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bTFrgLoginFacebookButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#3B5998"
                android:text="@string/frg_login_by_facebook" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bTFrgLoginTwitterButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00aced"
                android:text="@string/frg_login_twitter" />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/lBFrgLoginGooglePlus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_small_size"
                android:visibility="gone" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/lBFrgLoginFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/default_small_size"
                android:visibility="gone" />

            <com.twitter.sdk.android.core.identity.TwitterLoginButton
                android:id="@+id/lBFrgLoginTwitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_small_size"
                android:visibility="gone" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
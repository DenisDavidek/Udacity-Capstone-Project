<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tVFrgDoWorkoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_dark"
        android:contentDescription="@string/frg_do_workout_cd_workout_name"
        android:gravity="center"
        android:padding="@dimen/default_large_size"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:textColor="@color/primary_light"
        android:textStyle="bold"
        tools:text="Push up" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tVFrgDoWorkoutReps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/frg_do_workout_cd_number_of_repetitions"
                android:gravity="center"
                android:padding="@dimen/default_large_size"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                tools:text="5\nResp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/primary" />

            <TextView
                android:id="@+id/tVFrgDoWorkoutRounds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/frg_do_workout_cd_rounds_of_exercises"
                android:gravity="center"
                android:padding="@dimen/default_large_size"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                tools:text="Rounds\n1/5" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/primary" />

    </LinearLayout>

    <include layout="@layout/frg_do_workout_next_buttons" />

    <include
        layout="@layout/frg_do_workout_complete_footer"
        android:visibility="gone" />
</LinearLayout>

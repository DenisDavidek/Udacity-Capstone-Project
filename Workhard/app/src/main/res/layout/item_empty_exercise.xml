<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iVEmpty"
        android:layout_width="@dimen/empty_image"
        android:layout_height="@dimen/empty_image"
        android:layout_centerInParent="true"
        android:src="@drawable/atomic_bomb" />

    <TextView
        android:id="@+id/tVItemEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iVEmpty"
        android:layout_marginTop="@dimen/default_xx_large_size"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

</RelativeLayout>
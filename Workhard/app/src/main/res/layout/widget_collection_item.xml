<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLWidget"
    android:layout_width="match_parent"
    android:layout_height="@dimen/frg_home_height_workouts_items"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/default_large_size"
    android:paddingRight="@dimen/default_large_size">

    <TextView
        android:id="@+id/tVWidgetWorkoutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical" />

    <TextView
        android:id="@+id/tVWidgetWorkoutRounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/default_medium_size"
        android:paddingStart="@dimen/default_medium_size" />

</LinearLayout>